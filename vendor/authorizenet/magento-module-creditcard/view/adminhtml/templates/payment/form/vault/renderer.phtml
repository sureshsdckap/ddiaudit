$id = $block->getData('id');

?>
<div data-mage-init='{
        "AuthorizeNet_Core/js/vault": {
            "container": "payment_<?= /* @noEscape */ $id ?>",
            "publicHash": "<?= $hash ?>",
            "code": "<?= $code ?>"
        }
    }' id="payment_<?= /* @noEscape */ $id ?>" class="admin__field">

    <div class="admin__field-control control">
        <input class="required-entry" type="radio" id="token_switcher_<?= /* @noEscape */ $id ?>" name="payment[token_switcher]" />
        <label for="token_switcher_<?= /* @noEscape */ $id ?>">
            <img src="<?= $icon['url'] ?>"
                 width="<?= $icon['width'] ?>"
                 height="<?= $icon['height'] ?>"
                 class="payment-icon">
            <span><?= $details['cardNumber'] ?></span>
            (<span><?= $details['cardExpMonth'] . '/' . $details['cardExpYear']; ?></span>)
        </label>
    </div>
</div>
