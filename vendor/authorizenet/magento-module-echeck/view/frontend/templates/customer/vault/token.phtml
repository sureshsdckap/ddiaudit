/** @var VaultTokenRenderer $block */
$confirmDeleteMessage = sprintf(
    '%s: %s?',
    __('Are you sure you want to delete this eCheck'),
    $block->getAccountNumber() . '( ' . $block->getAccountName() . ' )'
);
?>
<tr>
    <td data-th="<?= $block->escapeHtml(__('Account Number')) ?>" class="col">
        <span><?= $block->getAccountNumber() ?></span>
    </td>
    <td data-th="<?= $block->escapeHtml(__('Name on Account')) ?>" class="col">
        <span><?= $block->getAccountName() ?></span>
    </td>
    <td data-th="<?= $block->escapeHtml(__('Type')) ?>" class="col">
        <img src="data:image/png;base64," style="margin: 0 5px 0 0; vertical-align: middle;" alt="eCheck.Net" />
